<h1>ユーザー登録</h1>
<% if flash[:alert] %>
    <div class="error">
    <% flash[:alert].each do |msg| %>
      <p id="error-message"><%= msg %></p>
    <% end %>
    </div>
<% end %>
<%= form_for(@user) do |f| %>
    <p>名前　（必須）</p>
    <%= f.text_field :name %>   
    <p>メール　（必須）</p>
    <%= f.text_field :email %>
    <p>好きな動物</p>
    <%= f.text_field :animal %>
    <br>
    <script src='https://www.google.com/recaptcha/api.js?hl=ja'></script>
    <%= recaptcha_tags %>
    <br>
    <%= f.submit 'Submit', id: 'button', class: 'btn btn-default' %>
<% end %>